[user]
  name = Yoshiyuki Ieyama
  email = yukku0423@gmail.com

[core]
  editor=vim
  excludesfile=~/.gitignore
  autocrlf=input
  precomposeunicode=true
  quotepath=false
  whitespace = cr-at-eol
  filemode = false

[color]
  ui=auto
  status=auto
  diff=auto
  branch=auto
  interactive=auto
  grep=auto

[diff]
	patience = true

[merge]
	tool=vimdiff
	ff=false

[push]
	default=simple

[pull]
	rebase=true

[http]
	sslVerify=false

[credential]
	helper=cache --timeout=31536000

[alias]
	ad=add
	au=add -u
	co=checkout
	ci=commit
	ca=commit -a
	ciam=commit --amend
	caam=commit -a --amend
	st=status
	sh=show
	up=pull --rebase
	rv=remote -v
	br=branch
	ba=branch -a
	ls=log --stat
	lp=log -p
	ll=log --decorate --oneline --graph
	log-graph=log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	log-all=log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'

